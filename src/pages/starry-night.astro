---
import Slideshow from "../layouts/Slideshow.astro";
import SlideshowContent from "../components/SlideshowContent.astro";
import data from "../scripts/data.json";

const prefix = data[0];
---

<Slideshow
	isNextDisabled={false}
	isPreviusDisabled={true}
	painter={prefix.artist.name}
	paintingTitle={prefix.name}
	nextPainting={data[1].link}
	previousPainting={data[0].link}
	title={"Galleria"}>
	<SlideshowContent
		description={prefix.description}
		painter={prefix.artist.name}
		painterPortrait={prefix.artist.image}
		painting={prefix.images.gallery}
		source={prefix.source}
		title={prefix.name}
	/>
</Slideshow>
