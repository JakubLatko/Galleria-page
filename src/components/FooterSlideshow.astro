---
interface Props {
	previousPainting: string;
	nextPainting: string;
	isPreviousDisabled: boolean;
	isNextDisabled: boolean;
	title: string;
	painter: string;
	sliderPercentage: number;
}

const {
	previousPainting,
	nextPainting,
	isPreviousDisabled,
	isNextDisabled,
	title,
	painter,
	sliderPercentage,
} = Astro.props;
---

<footer>
	<span style={`width:${sliderPercentage}vw`}></span>
	<div class="paintingInfo">
		<h2>{title}</h2>
		<p>{painter}</p>
	</div>
	<div class="controls">
		<a class:list={[{ isPreviousDisabled }]} href={previousPainting}
			><img
				src="../assets/shared/icon-back-button.svg"
				alt="Go to previous"
			/></a
		>
		<a class:list={[{ isNextDisabled }]} href={nextPainting}
			><img
				width={"60vw"}
				src="../assets/shared/icon-next-button.svg"
				alt="Go to next"
			/></a
		>
	</div>
</footer>

<style lang="scss">
	footer {
		position: fixed;
		bottom: 0;
		left: 0;
		right: 0;
		display: flex;
		flex-direction: row;
		align-items: center;
		justify-content: space-between;
		border-top: 1px solid var(--neutral-300);
		padding-inline: 1.5rem;
		padding-block: 1rem;
		z-index: 100;
		background-color: var(--neutral-500);
	}
	span {
		position: absolute;
		left: 0;
		top: -1px;
		height: 3px;
		background-color: var(--neutral-100);
	}
	h2 {
		color: var(--neutral-100);
		font-size: var(--subh1);
	}
	p {
		color: var(--neutral-200);
		font-size: var(--link2);
	}
	.controls {
		display: flex;
		flex-direction: row;

		gap: 1.5rem;
		align-items: center;
		img {
			object-fit: contain;
			width: 80%;
		}
	}
	.isPreviousDisabled,
	.isNextDisabled {
		opacity: 0.3;
	}
	@media only screen and (min-width: 768px) {
		.controls {
			gap: 2.5rem;
		}
	}
	@media only screen and (min-width: 1440px) {
		h2 {
			font-size: var(--h2);
		}
		p {
			font-size: var(--subh2);
		}
	}
</style>
